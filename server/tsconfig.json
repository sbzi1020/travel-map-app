{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs", // avoid issues with mix `require` and `import` for modules
        "lib": [
            "ES6",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020"
        ],
        "sourceMap": true,
        "outDir": "./dist", // the folder that transpiled `js` files will saved into
        "rootDir": "src", // source code 
        "moduleResolution": "node",
        "removeComments": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
